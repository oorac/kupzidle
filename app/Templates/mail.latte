<!doctype html>
<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&display=swap" rel="stylesheet">
		<title>{$title}</title>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&display=swap');

			img {
				border: none;
				-ms-interpolation-mode: bicubic;
				max-width: 100%;
			}

			body {
				background-color: #fcfcfc;
				font-family: 'Montserrat', sans-serif;
				-webkit-font-smoothing: antialiased;
				font-size: 14px;
				line-height: 1.4;
				margin: 0;
				padding: 0;
				-ms-text-size-adjust: 100%;
				-webkit-text-size-adjust: 100%;
				text-align: center;
				font-weight: 300;
			}

			.body {
				background-color: #fcfcfc;
				width: 100%;
			}

			.container {
				box-sizing: border-box;
				display: block;
				padding: 30px 20px;
				margin: 0 auto;
				max-width: 580px;
			}

			.content {
				box-sizing: border-box;
				display: block;
				width: 100%;
				padding: 20px;
				border: 1px solid rgba(0, 0, 0, 0.05);
				border-radius: 8px;
				text-align: left;
				margin-bottom: 20px;
				background-color: #ffffff;
				box-shadow: 0 0 30px rgba(0, 0, 0, 0.05);
			}

			.content h1,
			.content h2,
			.content h3,
			.content h4 {
				color: #000000;
				font-family: sans-serif;
				font-weight: 400;
				line-height: 1.4;
				margin: 0;
				margin-bottom: 30px;
			}

			.content h1 {
				font-size: 35px;
				font-weight: 300;
				text-align: center;
				text-transform: capitalize;
			}

			.content p,
			.content ul,
			.content ol {
				font-family: sans-serif;
				font-size: 14px;
				font-weight: normal;
				margin: 0;
				margin-bottom: 15px;
			}

			.content p li,
			.content ul li,
			.content ol li {
					list-style-position: inside;
					margin-left: 5px;
			}

			.content a {
				color: #3498db;
				text-decoration: underline;
				word-break: break-word;
			}
		</style>
	</head>
	<body class="">
		<div class="container">
			<div class="content">
				{ifset $body}
					{$body|noescape}
				{/ifset}
			</div>
		</div>
	</body>
</html>
